<MyMainWindow>:
    name: "mymain"
    url: url

    canvas:
        Color:
            rgb: (27/255, 47/255, 45/255, 1)
        Rectangle:
            pos: self.pos
            size: self.size

    BoxLayout:
        orientation: "vertical"
        spacing: 5

        Label:
            text: ""
            size_hint: 1, .1


        Label:
            text:"PSS"
            #font_name: "Cour"
            text_size: self.size
            size_hint: 1, .2
            pos_hint: {"x": .1}
            font_size: 50
            halign: "left"
            valign: "bottom"


        Label:
            text:"Portable SQL injection scanner"
            #font_name: "Cour"
            text_size: self.size
            size_hint: 1, .1
            pos_hint: {"x": .1}
            halign: "left"
            valign: "top"

        TextInput:
            id: url
            hint_text:"Url"
            #font_name: "Cour"
            text_size: self.size
            size_hint: .7, .15
            pos_hint: {"x": .15}
            halign: "left"
            valign: "center"
            # on_text: app.process()    ON TEXT CHANGED CALLBACK

        Label:
            text: ""
            size_hint: 1, .05

        Button:
            text:"Scan"
            #font_name: "Cour"
            size_hint: .6, .15
            pos_hint: {"x": .2}
            background_color: (1, 1, 1, 1)
            on_press: root.SearchBtn()
            # halign: "center"
            # valign: "center"

        Label:
            text: ""
            size_hint: 1, .1

        Label:
            text:"About this App"
            #font_name: "Couri"
            text_size: self.size
            size_hint: 1, .1
            pos_hint: {"x": .1}
            font_size: 30
            halign: "left"
            valign: "center"

        Label:
            text:"This application is the result of a project proposed y the Council for Scientific and Industrial Research (CSIR) to educate users about SQL Injection Vulnerability and through the use of the PSS users can make informed decisions on whether or not they want to start sharing their data with the target website. The PSS platform can also be used by web application penetration testers in the reconnaissance phase."
            #font_name: "Cour"
            size_hint: .8, .8
            text_size: self.size
            pos_hint: {"x": .1}
            halign: "left"
            valign: "top"


<P@Popup>:
    #result: result

    Label:
        id: result
        text: ""
        font_size: 15
        #font_name: "Courb"
        size_hint: .98, .8
        pos_hint: {"x": .005, "y": .15}
        halign: "left"
        valign: "top"

    Button:
        text: "Close"
        size_hint: .4, .1
        pos_hint: {"x": .3, "y": 0}
        on_press: root.parent.parent.parent.dismiss()

